---
import Particules from "@/components/sections/Particules.astro";
---
<div>
<button id="power" class="power">
    <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 512 512"
        width="20"
        height="20"
    >
        <path
            d="M288 32c0-17.7-14.3-32-32-32s-32 14.3-32 32V256c0 17.7 14.3 32 32 32s32-14.3 32-32V32zM143.5 120.6c13.6-11.3 15.4-31.5 4.1-45.1s-31.5-15.4-45.1-4.1C49.7 115.4 16 181.8 16 256c0 132.5 107.5 240 240 240s240-107.5 240-240c0-74.2-33.8-140.6-86.6-184.6c-13.6-11.3-33.8-9.4-45.1 4.1s-9.4 33.8 4.1 45.1c38.9 32.3 63.5 81 63.5 135.4c0 97.2-78.8 176-176 176s-176-78.8-176-176c0-54.4 24.7-103.1 63.5-135.4z"
        >
        </path>
    </svg>
</button>
<span>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" width="10" height="10">
        <path d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.2 288 416 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-306.7 0L214.6 118.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z"/></svg>Click me
</span>
</div>

<style>
    div{
        display: flex;
        align-items: center;
    }
    span{
        color: #666;
        margin-left: 5px;
        font-size: 1.5rem;
        letter-spacing: -0.05rem;
        z-index: 9999;
    }
    span svg{
        margin-left: 5px;
        margin-right: 2px;
    }
    button {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #bda0bc;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        position: relative;
        border: none;
        z-index: 9999;
    }
    button:hover {
        border: 1px solid #855e9a;
    }

    @media (width <= 500px) {
        button {
            width: 25px;
            height: 25px;
        }
    }
</style>

<script>
    const power = document.querySelector("#power");
    power!.addEventListener("click", () => {
        const particulas = window.document.querySelector(".divParticules");
        particulas!.classList.toggle("active");
        console.log("azteca");
    });
</script>
