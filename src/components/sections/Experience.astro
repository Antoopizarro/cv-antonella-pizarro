    width: 100px;
    border-radius: 6px;
    transition: all 0.3s ease;
  }

  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: none;
  }

  article h4 {
    margin-top: 10px;
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 1.5rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
      font-size: 1rem;
    }
  }

  @media (width <= 500px) {
    time {
      text-align: right;
      font-size: 1rem;
    }
    .cv {
