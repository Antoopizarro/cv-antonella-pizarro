---
import Section from "@/components/Section.astro";
import { languages } from '@cv';


---

<Section title="Lenguajes">
    <ul>
        {
            languages.map(({ language, fluency })=> (
                <li>
                    <h3 class="language">{language}</h3>
                    <span class="fluency">{fluency}</span>
                </li>
            ))
        }
    </ul>
</Section>

<style>
    
    ul{
        z-index: 9999;
        display: flex;
        flex-direction: column;
        gap: 12px;
        flex-wrap: wrap;
        margin-top: 15px;
    }

    li{
        z-index: 9999;
        display: flex;
        justify-content: space-between;
    }

    .language{
        font-weight: 500;
    }

    .fluency{
       color: #555;
    }

</style>