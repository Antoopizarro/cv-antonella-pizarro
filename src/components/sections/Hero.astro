---
import {basics} from '@cv';

import Date from '@/icons/Date.astro';
import Section from '@/components/Section.astro';
import Mail from '@/icons/Mail.astro';
import Phone from '@/icons/Phone.astro';
import GitHub from '@/icons/GitHub.astro';
import LinkedIn from '@/icons/LinkedIn.astro';
import WordlMap from '@/icons/WorldMap.astro';
import Behance from '@/icons/Behance.astro';

const {name, label, image, location, profiles, phone, email} = basics;
const { city, region } = location;

const SOCIAL_ICONS: Record<string, any> = {
    GitHub,
    LinkedIn,
    Behance
}

const linkedinInfo = profiles.find((profile) => profile.network === 'LinkedIn');
const linkedinUrl = linkedinInfo?.url;
const printInfo = [email, phone, linkedinUrl].filter(Boolean).join(', ');

---

<Section>
   <div class="container">
    <div class="info">
        <h1>{name}</h1>
        <h1>{label}</h1>
        <span>
            <WordlMap />
            {city} {region}
        </span>
        <span>
            <Date />
            14/11/2002
        </span>
        <footer>
            <div class="print">
                {printInfo}
            </div>
            </footer>
            <footer class="no-print">
            {
                email && (
                    <a href={`mailto:${email}`}
                    title={`Enviar un correo electrónico a ${name} al correo ${email}`}
                    target="_blank"
                    rel="noopener noreferrer">
                    <Mail />
                    </a>
                )
            }
            {
                phone && (
                    <a href={`tel:${phone}`}
                    title={`Llamar a ${name} al número ${phone}`}
                    target="_blank"
                    rel="noopener noreferrer">
                    <Phone />
                    </a>
                )
            }
            {
               profiles.map(({ network, url }) =>{
                const Icon = SOCIAL_ICONS[network]

                return (
                    <a href={url}
                    title={`Visitar el perfil de ${name} en ${network}`}
                    target="_blank"
                    rel="noopener noreferrer">
                    <Icon />
                    </a>
                )
               })
            }
            
        </footer>
        
    </div>
    <figure>
        <img src={image} alt={name}>
    </figure>

    </div> 
</Section>

<style>
    .container{
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }
    .info{
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding-right: 32px;
    }
    h1{
        font-size: 1.5rem;
        color: #7B4B94
    }
    h2{
        color: #444;
        font-weight: 500;
        font-size: 1.1rem;
        text-wrap: balance;
    }
    img{
        
        object-fit: cover;
        width: 150px;
        border-radius: 50%;
        background-color: #BDA0BC;
 
    }

    :hover img {-webkit-transform:scale(1.3);transform:scale(1.3);}{{overflow:hidden;}}
    /* img:hover {
        filter: opacity(.5);
    } */
    span{
        color: #666;
        display: flex;
        align-items: center;
        gap: .25rem;
        font-size: 1rem;
        letter-spacing: -0.05rem;

    }
    footer{
        color: #BDA0BC;
        font-size: 0.60rem;
        display: flex;
        gap: 4px;
        margin-top: 8px;
    }
    footer a{
        color: #BDA0BC;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #BDA0BC;
        padding: 4px;
        height: 32px;
        width: 32px;
        border-radius: 6px;
        transition: all .3s ease;
    }
    footer a:hover{
        /* background: #ddd; */
        border: 1px solid #7B4B94;
    }
</style>