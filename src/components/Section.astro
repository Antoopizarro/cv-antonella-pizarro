---
const {title} = Astro.props;
---

<section>
    {title && <h2>{title}</h2>}
    <slot />
</section>

<style>
  section {
    position: relative;
    max-width: 700px;
    margin: 0 auto 48px;
   
  }

  h2{
    position: relative;
    z-index: 9999;
    margin-bottom: 8px;
    font-weight: 600;
    line-height: 1.5;
  }


  @media (width <= 500px) {
		h2{
       font-size: 2rem;
    }
	}
</style>
